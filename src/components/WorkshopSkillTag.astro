import Testing from '@/icons/TestingLogo.svg'
import JavaScript from '@/icons/JavaScript.svg'
import TypeScript from '@/icons/TypeScript.svg'

const { tag } = Astro.props

export type TypeTag = {
  name: string
  icon: any
}

export interface Props {
  tag: TypeTag
}

export const TAGS = {
  FIREBASE: {
    name: 'Firebase',
    icon: Firebase,
  },
  IA: {
    name: 'Inteligencia Aritificial',
    icon: IA,
  },
  NODEJS: {
    name: 'NodeJS',
    icon: NodeJS,
  },
  OPTIMIZATION: {
