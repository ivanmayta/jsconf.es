---
const { item } = Astro.props
const { time, topic, speaker, role, image } = item
---

<div
  class="flex justify-between items-center bg-[#191919] p-4 px-4 border border-white border-opacity-5 flex-col md:flex-row"
>
  <div class="flex gap-4 flex-1 flex-col md:flex-row">
    <h4
      class="border-0 md:border-r border-white border-opacity-5 pr-4 text-javascript min-w-32 tabular-nums font-mono justify-center items-center flex tracking-tight"
    >
      {time}
    </h4>
    <p class="text-xl text-balance">{topic}</p>
  </div>
  <div class="flex items-center w-full md:w-[30%] mt-4 md:mt-0">
    <img
      width={48}
      height={48}
      src={`/img/${image}`}
      alt={`Imagen de avatar de ${speaker} - ${role}`}
      class="size-12 rounded-full mr-4"
    />
    <div class="flex flex-col">
      <p>{speaker}</p>
      <p class="text-javascript text-balance">{role}</p>
    </div>
  </div>
</div>
